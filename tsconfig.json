{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths":{
      "@/*":["src/*"],
      "@views/*":["src/views/*"],
      "@store/*":["src/store/*"],
    },
    "types": ["pinia-plugin-persist"]
  },
  "include": ["**/*.ts","**/*.vue","**/*.tsx","src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","vite.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
